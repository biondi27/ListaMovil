<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Agregar Nueva Tarea"
             x:Class="ListaMovil.Views.AddPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" x:Name="botonguardar" Clicked="botonguardar_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="Black"></Label>
            <Entry x:Name="nombre"></Entry>
            <Label Text="Descripción" FontSize="Medium" TextColor="Black"></Label>
            <Editor x:Name="descripcion" HeightRequest="200"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>